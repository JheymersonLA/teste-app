
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita em toda a coleção "settings" e "records"
    // ATENÇÃO: Em um app de produção com múltiplos usuários, você deve
    // implementar regras de segurança mais granulares baseadas em autenticação.
    match /{collection}/{document=**} {
      allow read, write: if true;
    }
  }
}
